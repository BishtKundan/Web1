<script src="~/Scripts/jquery-1.8.2.min.js"></script>
@Html.DropDownList("Id", (SelectList)ViewBag.Vendors, "--Select One--", new { onchange = "GetUserDetails(this);" })
<div id="dvUserDetails">
    <p> </p>
</div>
