    function GetUserDetails(obj) {
        var selectedUser = $(obj).val();

        //Load the PartialView

        var urlToHit = '/Masters/DropDownTest/VendorDetail';

        //alert(selectedUser);

        $.ajax({
            url: urlToHit,
            cache: false,
            type: "POST",
            data: { id: selectedUser },
            success: function (data) {
                //alert(data);
                $("#dvUserDetails").html(data);
            },
            error: function () {
                alert("failed 123");
            }

        });

